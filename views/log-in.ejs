<div class="flex justify-center items-center h-screen bg-gray-100">
  <div class="border border-gray-300 rounded-lg p-8 w-96 bg-white shadow-md">
    <h1 class="text-2xl font-bold text-center mb-6">Log In</h1>

    <!-- Display errors if any -->
    <% if (errors && errors.length > 0) { %>
      <div class="errors mb-4">
        <ul class="text-red-500">
          <% errors.forEach((error) => { %>
            <li><%= error %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <!-- Login form -->
    <form method="POST" action="/log-in">
      <div class="mb-4">
        <label for="email" class="block text-sm font-medium text-gray-700">Email:</label>
        <input
          type="email"
          id="email"
          name="email"
          value="<%= formData ? formData.email : '' %>"
          class="w-full border border-gray-400 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-purple-500"
          required
        >
      </div>

      <div class="mb-4">
        <label for="password" class="block text-sm font-medium text-gray-700">Password:</label>
        <input
          type="password"
          id="password"
          name="password"
          class="w-full border border-gray-400 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-purple-500"
          required
        >
      </div>

      <div class="mb-6">
        <label class="block text-sm font-medium text-gray-700 mb-2">Role:</label>
        <div class="flex items-center space-x-4">
          <label class="flex items-center">
            <input
              type="radio"
              name="role"
              value="dataEntryClerk"
              class="focus:ring-purple-500 h-4 w-4 text-purple-600 border-gray-300"
              checked
            >
            <label class="ml-2 text-gray-700">Data Entry Clerk</label>
          </label>
          <label class="flex items-center">
            <input
              type="radio"
              name="role"
              value="customer"
              class="focus:ring-purple-500 h-4 w-4 text-purple-600 border-gray-300"
              
            >
            <label class="ml-2 text-gray-700">Customer</label>
          </label>
        </div>
      </div>

      <button
        type="submit"
        class="w-full bg-purple-600 text-white py-3 rounded-full hover:bg-purple-700 transition"
      >
        Log In
      </button>
    </form>
  </div>
</div>