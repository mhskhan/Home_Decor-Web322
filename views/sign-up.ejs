<div class="flex justify-center items-center h-screen bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-lg w-96 border">
      <h2 class="text-2xl font-bold text-center mb-6">Sign Up</h2>
      <% if (errors && errors.length > 0) { %>
        <div class="errors mb-4">
          <ul class="text-red-500">
            <% errors.forEach(error => { %>
              <li><%= error %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>
      <form action="/sign-up" method="POST">
        <div class="mb-4">
          <input type="text" name="firstName" placeholder="First Name" class="input input-bordered w-full" value="<%= formData ? formData.firstName : '' %>" >
        </div>
        <div class="mb-4">
          <input type="text" name="lastName" placeholder="Last Name" class="input input-bordered w-full" value="<%= formData ? formData.lastName : '' %>" >
        </div>
        <div class="mb-4">
          <input type="text" name="email" placeholder="Email" class="input input-bordered w-full" value="<%= formData ? formData.email : '' %>" >
        </div>
        <div class="mb-6">
          <input type="password" name="password" placeholder="Password" class="input input-bordered w-full" >
        </div>
        <button type="submit" class="btn bg-purple-600 text-white w-full rounded-full hover:bg-purple-700">Continue</button>
      </form>
    </div>
  </div>