<section class="hero">
    <img src="/images/hero.jpg" alt="Hero Image">
    <div class="hero-text">
        <h1>Welcome to HomeDecore</h1>
        <p>Your one-stop shop for all home essentials requires to make your life comfortable.</p>
    </div>
</section>

<section class="content-section">
    <div class="content-item">
        <img src="images/elevated.jpg" alt="Elevated Essentials">
        <h2>Elevated Essentials</h2>
    </div>
    <div class="content-item">
        <img src="images/mid-century.jpeg" alt="Mid-Century Modern">
        <h2>Mid-Century Modern</h2>
    </div>
    <div class="content-item">
        <img src="images/traditional.jpg" alt="Traditional with a Twist">
        <h2>Traditional with a Twist</h2>
    </div>
    <div class="content-item">
        <img src="images/city.jpg" alt="City Vibes, Chic Styles">
        <h2>City Vibes</h2>
    </div>
</section>

<section class="featured">
    <h2>Featured Products</h2>
    <div class="products">
        <% featuredProducts.forEach(product => { %>
            <%- include('partials/product', { product: product }) %>
        <% }) %>
    </div>
</section>