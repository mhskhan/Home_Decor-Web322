<div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 w-72">
    <div class="relative h-48 bg-gray-100 flex items-center justify-center">
        <% if (product.imageUrl && product.imageUrl.trim() !== '') { %>
            <img src="<%= product.imageUrl %>" alt="<%= product.title %>" 
                 class="w-full h-full object-cover transition-transform duration-500 hover:scale-105">
        <% } else { %>
            <div class="w-full h-full flex items-center justify-center">
                <span class="text-gray-500">No Image Available</span>
            </div>
        <% } %>
        <% if (product.featured) { %>
            <span class="absolute top-2 right-2 bg-yellow-400 text-yellow-900 text-xs font-bold px-2 py-1 rounded-full">FEATURED</span>
        <% } %>
    </div>
    
    <div class="p-4 text-center">
        <h3 class="text-lg font-semibold text-gray-800 mb-2"><%= product.title %></h3>
        <p class="text-gray-600 text-sm mb-3 line-clamp-2"><%= product.description %></p>
        
        <div class="mb-4">
            <% if (product.salePrice) { %>
                <span class="text-gray-400 line-through mr-2">$<%= product.price.toFixed(2) %></span>
                <span class="text-red-600 font-bold">$<%= product.salePrice.toFixed(2) %></span>
            <% } else { %>
                <span class="text-gray-800 font-bold">$<%= product.price.toFixed(2) %></span>
            <% } %>
        </div>
        
        <% if (user && user.role === 'customer') { %>
            <form action="/cart/add" method="POST">
                <input type="hidden" name="productId" value="<%= product._id %>">
                <button type="submit" 
                        class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded transition-colors duration-200 w-full">
                    Add to Cart
                </button>
            </form>
        <% } %>
    </div>
</div>